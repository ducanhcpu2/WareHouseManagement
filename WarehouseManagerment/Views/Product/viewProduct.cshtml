
@{
    ViewBag.Title = "viewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WarehouseManagerment.Models;
@using WarehouseManagerment.Core.CSharp;

<div class="myDesignTitle-0">
    <div class="myDesignTitle-1">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>QUẢN LÝ KHO</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">QLKho</a></li>
                            <li><a href="#">Hàng hóa</a></li>
                            <li class="active">Xem chi tiết</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    tbTaiKhoan acc = new tbTaiKhoan();
    try
    {
        acc = (tbTaiKhoan)Session["user"];
    }
    catch
    {
        <script>
                                window.location.href = "../Account/Login";
        </script>
    }
}
@{
    tbHangHoa Product = ViewBag.Product;
}
<div class="row edit-account " style="position:inherit;" id="edit-account">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="box-title">Chi tiết hàng hóa</h4>
            </div>
            <div class="row">
                <div class="col-lg-12" style="">
                    <div class="card" style="margin-top:20px;">
                        <div class="card-header">
                            <strong class="card-title">Bảng thông tin</strong>
                        </div>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="card-body col-lg-6">
                                <div class="profile" style="margin-left:0px;">
                                    <div class="profile-body">
                                        <div class="row">
                                            <div class="col-lg-4">Tên hàng hóa:</div>
                                            <div class="col-lg-8">@Product.productName</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">Loại hàng hóa:</div>
                                            <div class="col-lg-8">@Product.tbLoaiHangHoa.categoryName</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">Số lượng:</div>
                                            <div class="col-lg-8">@Product.amount</div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">Đơn giá</div>
                                            <div class="col-lg-8">
                                                        <span class="badge badge-complete">@Product.price</span><span class="badge badge-complete" style="text-transform:none;padding-bottom:0px;"><sup>đ</sup></span>
</div>
                                        </div>                                      
                                    </div>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>



            </div> <!-- /.row -->

            <div class="card-body"></div>
        </div>
    </div><!-- /# column -->
</div>